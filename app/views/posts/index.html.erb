<p id="notice"><%= notice %></p>

<strong><%= link_to 'Create New Post', new_post_path %></strong>

<br>

<table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><strong>Title</strong></td>
        <td><%= post.title %></td>
      </tr>
      <tr>
        <td><strong>Text</strong></td>
        <td><%= truncate(strip_tags(post.text), length: 100) %></td>
      </tr>
      <tr>
        <td>
          <%= link_to 'Show', post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
